# Development Dockerfile for NEAR DNS website
# For hot-reload development environment

FROM node:20-slim

# Install build dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app/website

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY ./

# Expose development port
EXPOSE 3000

# Default to development server with hot reload
CMD ["npm", "run", "dev"]
